<AnchorPane fx:id="SeatSelectionPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.busticket.controllers.SeatSelectionController">
    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <top>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Text styleClass="header-text" text="Select Your Seats" />
                <HBox alignment="CENTER" spacing="20">
                    <Label text="Bus: " />
                    <Label fx:id="busNameLabel" />
                    <Label text="Date: " />
                    <Label fx:id="dateLabel" />
                </HBox>
            </VBox>
        </top>

        <center>
            <GridPane fx:id="seatingGrid" alignment="CENTER" hgap="10" vgap="10">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            <columnConstraints>
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
            </rowConstraints>
            <children>
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="0A" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="1A" wrapText="true" GridPane.rowIndex="1" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="2A" GridPane.rowIndex="2" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="3A" GridPane.rowIndex="3" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="4A" GridPane.rowIndex="4" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="5A" GridPane.rowIndex="5" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="6A" GridPane.rowIndex="6" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="7A" GridPane.rowIndex="7" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="8A" GridPane.rowIndex="8" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="115.0" text="9A" GridPane.rowIndex="9" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="0B" wrapText="true" GridPane.columnIndex="2" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="1B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="2B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="3B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="3" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="4B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="4" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="5B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="5" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="6B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="6" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="7B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="7" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="8B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="8" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="9B" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="9" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="0C" wrapText="true" GridPane.columnIndex="3" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="1C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="2C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="3C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="3" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="4C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="4" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="5C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="5" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="6C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="6" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="7C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="7" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="8C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="8" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="9C" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="9" />
            </children>
            </GridPane>
        </center>

        <right>
            <VBox prefWidth="200" spacing="10" style="-fx-background-color: #f0f0f0;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Text text="Selected Seats" />
                <ListView fx:id="selectedSeatsList" VBox.vgrow="ALWAYS" />
                <Text text="Total Amount: " />
                <Label fx:id="totalAmountLabel" />
<!--                <Button text="Proceed to Payment" onAction="#handlePayment" maxWidth="Infinity"/>-->
                <Button maxWidth="Infinity" onAction="#handleBack" text="Back" />
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
