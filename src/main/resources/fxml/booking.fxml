<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.busticket.controllers.BookingController"
            fx:id="bookingPane"
            prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text styleClass="header-text" text="Book Your Ticket"/>

        <GridPane hgap="10" vgap="15" alignment="CENTER">
            <ComboBox fx:id="fromLocation" promptText="From" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox fx:id="toLocation" promptText="To" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <DatePicker fx:id="travelDate" promptText="Travel Date"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="busType" promptText="Bus Type"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Button text="Search Buses" onAction="#handleSearch"
                    GridPane.columnIndex="0" GridPane.rowIndex="2"
                    GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        </GridPane>

        <TableView fx:id="busScheduleTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Bus Name" fx:id="busNameColumn"/>
                <TableColumn text="Departure" fx:id="departureColumn"/>
                <TableColumn text="Arrival" fx:id="arrivalColumn"/>
                <TableColumn text="Type" fx:id="typeColumn"/>
                <TableColumn text="Fare" fx:id="fareColumn"/>
                <TableColumn text="Available Seats" fx:id="seatsColumn"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Back" onAction="#handleBack"/>
            <Button text="Select Seats" onAction="#handleSeatSelection"/>
        </HBox>
    </VBox>
</AnchorPane>