<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fxml.Payment"
            prefHeight="500.0" prefWidth="600.0">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="20" right="40" bottom="20" left="40"/>
        </padding>

        <Text styleClass="header-text" text="Payment Details"/>

        <GridPane hgap="10" vgap="15" alignment="CENTER">
            <Label text="Booking Summary" styleClass="subheader-text"
                   GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

            <Label text="Selected Seats:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="selectedSeatsLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="totalAmountLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Separator GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>

            <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <ComboBox fx:id="paymentMethod" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="cardNumber" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Expiry Date:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <TextField fx:id="expiryMonth" prefWidth="50" promptText="MM"/>
                <TextField fx:id="expiryYear" prefWidth="50" promptText="YY"/>
            </HBox>

            <Label text="CVV:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <PasswordField fx:id="cvv" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Back" onAction="#handleBack"/>
            <Button text="Confirm Payment" onAction="#handlePayment"/>
        </HBox>

        <Label fx:id="messageLabel" styleClass="message-label"/>
    </VBox>
</AnchorPane>